<h1>Boxes</h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.no %></td>
        <td><%= box.name %></td>
        <td><%= link_to 'Show', box %></td>
        <td><%= link_to 'Edit', edit_admin_box_path(box) %></td>
        <td><%= link_to 'Destroy', admin_box_path(box), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_admin_box_path %>

