<%= simple_form_for @election_type, url: locals[:path], 
    wrapper: :horizontal_form,
    wrapper_mappings: {
    file: :horizontal_file,
    boolean: :horizontal_boolean 
    } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :option,  as: :radio_buttons, collection: ['candidate', 'party'], require: true  %>
  <%= f.button :submit %>
<% end %>