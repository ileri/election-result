<h1>Parties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short Name</th>
      <th>Logo</th>
      <th>Alliance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td><%= party.short_name %></td>
        <td><%= image_tag party.logo.icon if party.logo.present? %></td>
        <td><%= party.alliance.name if party.alliance.present?%></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_admin_party_path(party) %></td>
        <td><%= link_to 'Destroy', admin_party_path(party), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Party', new_admin_party_path %>
